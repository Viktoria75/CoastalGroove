<%- include('partials/layout') %>
<link rel="stylesheet" href="/css/contact.css">
<script src="/scripts/contact.js"></script>

    <%- include('partials/header') %> 
    <main>

        <h1>Contact Us</h1>
        <h4>We will try to get back to you as soon as we can!</h4>

        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3574.581978727922!2d-80.24004902373997!3d26.37237927697332!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9198130a76d25%3A0xe7e8825f08287f51!2sSunset%20Cove%20Amphitheater!5e0!3m2!1sen!2sbg!4v1709327911470!5m2!1sen!2sbg" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
     
        <section class="contact-us">
            <div class="contact">
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fa fa-home"></i>
                        <div class="text-wrapper">
                            <h4>Sunset Cove Amphiteater</h4>
                            <p>Address of Festival Venue</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fa fa-phone"></i>
                        <div class="text-wrapper">
                            <h4>0044-2045879655</h4>
                            <p>Contact Phone Number</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fa fa-envelope-o"></i>
                        <div class="text-wrapper">
                            <h4>contact@coastalgroove.com</h4>
                            <p>Email Contact</p>
                        </div>
                    </div>
                </div>
                <div class="contact-form">
                    <form id="contactForm" action="/contact/submit" method="post">
                    
                        <label for="name">Full Name:</label>
                        <input type="text" id="name" name="name" required>
                    
                        <label for="phone">Phone number:</label>
                        <input type="number" id="phone" name="phonenumber" required>
                    
                        <label for="subject">Subject:</label>
                        <textarea id="subject" name="subject" style="height:200px" required></textarea>
                    
                        <button type="submit" class="form-button">Submit</button>
                    </form>
                    
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %> 

